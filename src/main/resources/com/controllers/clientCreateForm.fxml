<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.controllers.CreateClientController"
      prefWidth="300" prefHeight="200" alignment="CENTER">

    <Label text="Update Client" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <Label text="Name:"/>
        <TextField fx:id="nameField"/>
    </HBox>

    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="createClientButton" text="Create" onAction="#createClient"/>
        <Button text="Cancel" onAction="#cancelCreate"/>
    </HBox>

</VBox>
